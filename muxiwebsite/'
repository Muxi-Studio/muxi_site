# coding: utf-8

"""
    filter.py
    ~~~~~~~~~

        自定义jinja装饰器

"""

from flask import Markup
from jinja2 import environment
import markdown


# markdown装饰器
def neomarkdown(markdown_content):
    content = Markup(markdown.markdowm(markdown_content))
    return content


# 注册到filters字典中
environment.filters['neomarkdown'] = neomarkdown
